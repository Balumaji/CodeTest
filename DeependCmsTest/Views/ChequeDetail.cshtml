@using Zoombraco.Models
@using Zoombraco.Views
@using DeependCmsTest.Models.Pages;
@using DeependCmsTest.Helpers;

@inherits ZoombracoViewPage<RenderPage<DeependCmsTest.Models.Pages.ChequeDetail>>

@{
    Layout = "Master.cshtml";
}

@{
    var dtl = Model != null ? Model.Content.ChequeDtl : null;
}

<div class="container">
    <div class="row">
        <div class="col-xs-8 col-sm-12 col-md-4">
            <h1>
                @Model.Content.PageTitle
            </h1>
        </div>
    </div>

    @if (dtl != null)
    {
        <div class="row">
            <div class="col-md-3">Name </div>
            <div class="col-md-6">@dtl.ChequeName</div>
        </div>
        <div class="row">
            <div class="col-md-3">Amount </div>
            <div class="col-md-6">@(string.Format("${0:n}", dtl.Amount))</div>
        </div>
        <div class="row">
            <div class="col-md-3">Date </div>
            <div class="col-md-6">@dtl.Date.ToString("dd-MM-yyyy")</div>
        </div>
        <div class="row">
            <div class="col-md-3">Pay </div>
            <div class="col-md-6">@dtl.Amount.ToText().ToUpper()</div>
        </div>
    }   


    <br /><br />
    <a href="/cheques" class="btn btn-primary btn-lg disabled" role="button"><< Back</a>

</div>
